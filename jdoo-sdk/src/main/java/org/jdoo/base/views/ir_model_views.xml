<?xml version="1.0" encoding="utf-8"?>
<data>
    <view id='model_search' name='模型-查询' model='ir.model'>
        <search>
            <field name="name"/>
            <field name="model"/>
            <field name="origin"/>
        </search>
    </view>
    <view id='model_grid' name='模型-表格' model='ir.model'>
        <grid>
            <toolbar buttons="default">
                <button type="object" auth="update" label="生成默认视图" t-enable="id" service="initDefaultViews"/>
            </toolbar>
            <field name="name"/>
            <field name="model"/>
            <field name="inherit"/>
            <field name="table"/>
            <field name="origin"/>
        </grid>
    </view>
    <view id='model_form' name='模型-表单' model='ir.model'>
        <form>
            <toolbar buttons="default">
            </toolbar>
            <field name="name"/>
            <field name="model"/>
            <field name="inherit"/>
            <field name="table"/>
            <field name="order"/>
            <field name="present"/>
            <field name="is_transient"/>
            <field name="origin"/>
            <field name="description" editor="text" colspan="4"/>
            <tabs>
                <tab label = "字段">
                    <field name="field_ids" colspan="4" nolabel="1">
                        <grid label="Views">
                            <field name="name"/>
                            <field name="field_type"/>
                            <field name="label"/>
                            <field name="required"/>
                            <field name="readonly"/>
                            <field name="index"/>
                            <field name="store"/>
                            <field name="origin"/>
                            <edit>
                                <field name="name"/>
                                <field name="field_type"/>
                                <field name="label"/>
                                <field name="help"/>
                                <field name="required"/>
                                <field name="readonly"/>
                                <field name="related"/>
                                <field name="index"/>
                                <field name="store"/>
                                <field name="copy"/>
                                <field name="depends"/>
                                <field name="default_value"/>
                                <field name="compute"/>
                                <field name="origin"/>
                                <field name="translate" t-visible="this.field_type==='char'"/>
                                <field name="length" t-visible="this.field_type==='char'"/>
                                <field name="relation" t-visible="this.field_type==='many2one' || this.field_type==='one2many' || this.field_type==='many2many'"/>
                                <field name="relation_field" t-visible="this.field_type==='one2many'"/>
                                <field name="relation_table" t-visible="this.field_type==='many2many'"/>
                                <field name="column1" t-visible="this.field_type==='many2many'"/>
                                <field name="column2" t-visible="this.field_type==='many2many'"/>
                            </edit>
                        </grid>
                    </field>
                </tab>
            </tabs>
        </form>
    </view>

    <view id='model_field_search' name='字段-查询' model='ir.model.field'>
        <search>
            <field name="name"/>
            <field name="label"/>
            <field name="origin"/>
        </search>
    </view>
    <view id='model_field_grid' name='字段-表格' model='ir.model.field'>
        <grid>
            <toolbar buttons="default">
            </toolbar>
            <field name="name"/>
            <field name="model_id"/>
            <field name="field_type"/>
            <field name="label"/>
            <field name="required"/>
            <field name="readonly"/>
            <field name="index"/>
            <field name="store"/>
            <field name="origin"/>
        </grid>
    </view>
    <view id='model_field_form' name='字段-表单' model='ir.model.field'>
        <form>
            <toolbar buttons="default">
            </toolbar>
            <field name="name"/>
            <field name="model_id"/>
            <field name="field_type"/>
            <field name="label"/>
            <field name="help"/>
            <field name="required"/>
            <field name="readonly"/>
            <field name="index"/>
            <field name="store"/>
            <field name="copy"/>
            <field name="depends"/>
            <field name="origin"/>
        </form>
    </view>
</data>