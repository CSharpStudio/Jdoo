<?xml version="1.0" encoding="utf-8"?>
<data>
    <!-- user 1 is the technical admin user -->
    <record id="base.user_root" model="rbac.user">
        <field name="id">superuser</field>
        <field name="name">超级管理员</field>
        <field name="login">supperuser</field>
        <field name="email">root@example.com</field>
    </record>

    <!-- user 2 is the human admin user -->
    <record id="user_admin" model="rbac.user">
        <field name="login">admin</field>
        <field name="name">管理员</field>
        <field name="password">admin</field>
    </record>

    <!-- Default user with full access rights for newly created users -->
    <record id="default_user" model="rbac.user">
        <field name="name">Default User Template</field>
        <field name="login">default</field>
        <field name="active" eval="false"/>
    </record>

    <record id="public_user" model="rbac.user">
        <field name="name">Public user</field>
        <field name="login">public</field>
        <field name="password"></field>
        <field name="active" eval="false"/>
    </record>

    <record id="role_admin" model="rbac.role">
        <field name="name">admin</field>
        <field name="is_admin">true</field>
        <field name="user_ids" eval="[[4, ref(base.user_admin)]]"></field>
    </record>
</data>
